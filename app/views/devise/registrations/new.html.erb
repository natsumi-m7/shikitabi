<div class="session_container">
  <div class="new_registration">
  <div class="new_registration_form">
      <h2>会員登録</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="registration_name">
    <div class="field">
      <%= f.label :名字 %><br />
      <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname" %>
    </div>

    <div class="field">
      <%= f.label :名前 %><br />
      <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname" %>
    </div>
  </div>
  <div class="registration_namekana">
    <div class="field">
      <%= f.label :みょうじ %><br />
      <%= f.text_field :lastname_kana, autofocus: true, autocomplete: "lastname_kana" %>
    </div>

    <div class="field">
      <%= f.label :なまえ %><br />
      <%= f.text_field :firstname_kana, autofocus: true, autocomplete: "firstname_kana" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" ,class:"form-control"%>
  </div>
  <div class="form_address_introduction">
    <div class="address">
      <div class="field">
        <%= f.label :郵便番号 %><br />
        <%= f.text_field :postal, autofocus: true, autocomplete: "postal" %>
      </div>

      <div class="field">
        <%= f.label :住所 %><br />
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>
    </div>
    <div class="field">
      <%= f.label :紹介文 %><br />
      <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction",:size => "20x5" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :メール %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "会員登録する",class:"btn btn-default" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>
</div>


