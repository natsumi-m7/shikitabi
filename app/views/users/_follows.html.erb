<% @user_followings.each do |user| %>
	<div class="follow_user">
	  <div class="follow_user_left">
	  <%= link_to image_tag(user.user_image.url,class: "follow_image"), user_path(user.id) %>
	  </div>
	  <div class="follow_user_right">
	    <div class="follow_user_nickname">
	    	<%= user.nickname %>
		    <% if current_user != user %>
		        <% if user.followed_by?(current_user) %>
		            <%=link_to "フォロー解除", user_relations_path(user.id), method: :delete,class: "btn btn-default btn-xs follow_btn" %>
		        <% else %>
		            <%=link_to "フォローする", user_relations_path(user.id), method: :post,class: "btn btn-default btn-xs" %>
		        <% end %>
		    <% end %>
	    </div>
	    <div class="follow_user_introduction">
	    	<p><%= user.introduction %></p>
	    </div>
	  </div>
	</div>
<% end %>
