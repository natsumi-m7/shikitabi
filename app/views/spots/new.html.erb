<h1>New Spot</h1>

<%= form_with model:@spot, local: true do |f| %>
	<%= f.label :spot_name, "スポット名", class:"label-bold" %><br>
	<%= f.text_field :spot_name ,class:"form-control form-ucr"%>

	<%= f.label :description, "内容", class:"label-bold" %><br>
	<%= f.text_field :description ,class:"form-control form-ucr"%>

	<%= f.label :season, "季節", class:"label-bold" %><br>
    <%= f.select :season, Spot.seasons.keys, { prompt: '選択してください' } %>


	<%= f.label :spot_address, "場所", class:"label-bold" %><br>
	<%= f.text_field :spot_address ,class:"form-control form-ucr"%>

	<%= f.label :prefecture, "地域", class:"label-bold" %><br>
	<%= f.select :prefecture, Spot.prefectures.keys, { prompt: '選択してください' } %>

	<%= f.label :images, "画像", class:"label-bold" %><br>
	<%= f.file_field :images, multiple: true %>

	<%= f.submit '新規追加' %>

<% end %>



